<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
  android:id="@+id/referral_card_view"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_margin="6sp"
  app:cardElevation="6sp">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">

    <com.github.glomadrian.dashedcircularprogress.DashedCircularProgress
      android:id="@+id/member"
      android:layout_width="match_parent"
      android:layout_height="200sp"
      app:base_color="@color/primary_text"
      app:duration="3500"
      app:external_color="@color/secondary_text"
      app:max="999"
      app:min="0">

      <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
          android:id="@+id/dash_title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:text="@string/member"
          android:textColor="@color/primary_text"
          android:textSize="18sp"/>

        <TextView
          android:id="@+id/dash_description"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/dash_title"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="24sp"
          android:text="@string/member_placeholder"
          android:textColor="@color/secondary_text"/>
      </RelativeLayout>
    </com.github.glomadrian.dashedcircularprogress.DashedCircularProgress>
  </RelativeLayout>
</androidx.cardview.widget.CardView>
