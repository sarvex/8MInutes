<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
  android:id="@+id/team_card_view"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_margin="6sp"
  app:cardElevation="6sp">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:padding="4dp">

    <ImageView
      android:layout_width="match_parent"
      android:layout_height="128sp"
      android:scaleType="fitCenter"
      app:ico_size="48dp"
      app:ico_icon="gmd-account-circle"/>

    <TextView
      android:id="@+id/name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:layout_centerHorizontal="true"
      android:textSize="24sp"
      tools:text="Name"/>

    <TextView
      android:id="@+id/members"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/name"
      android:layout_toLeftOf="@+id/members_label"
      android:layout_toStartOf="@+id/members_label"
      tools:text="7"/>

    <TextView
      android:id="@+id/members_label"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/name"
      android:layout_centerHorizontal="true"
      tools:text=" Members"/>

    <TextView
      android:id="@+id/earnings"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/members"
      android:layout_centerHorizontal="true"
      android:textSize="18sp"
      tools:text="Rs. 1000"/>

    <TextView
      android:id="@+id/installed"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/earnings"
      android:layout_toLeftOf="@+id/installed_label"
      android:layout_toStartOf="@+id/installed_label"
      tools:text="2"/>

    <TextView
      android:id="@+id/installed_label"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/earnings"
      android:layout_centerHorizontal="true"
      tools:text=" Installed"/>

    <TextView
      android:id="@+id/progress"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/installed"
      android:layout_toLeftOf="@+id/progress_label"
      android:layout_toStartOf="@+id/progress_label"
      tools:text="5"/>

    <TextView
      android:id="@+id/progress_label"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/installed_label"
      android:layout_centerHorizontal="true"
      tools:text=" Progress"/>

    <TextView
      android:id="@+id/pending"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/progress"
      android:layout_toLeftOf="@+id/pending_label"
      android:layout_toStartOf="@+id/pending_label"
      tools:text="1"/>

    <TextView
      android:id="@+id/pending_label"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/progress_label"
      android:layout_centerHorizontal="true"
      tools:text=" Pending"/>
  </RelativeLayout>
</androidx.cardview.widget.CardView>
