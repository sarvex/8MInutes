<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
  android:id="@+id/referral_card_view"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_margin="6sp"
  app:cardElevation="6sp">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gradient"
    android:padding="4dp">

    <ImageView
      android:id="@+id/referral_photo"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_alignParentTop="true"
      android:layout_marginEnd="16dp"
      android:layout_marginRight="16dp"
      app:ico_color="@color/primary"
      app:ico_icon="gmd-account-circle"
      app:ico_size="48dp"/>

    <TextView
      android:id="@+id/referral_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:layout_toEndOf="@id/referral_photo"
      android:layout_toRightOf="@id/referral_photo"
      android:textSize="24sp"
      tools:text="Referral Name"/>

    <TextView
      android:id="@+id/referral_status"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/referral_name"
      android:layout_toEndOf="@id/referral_photo"
      android:layout_toRightOf="@id/referral_photo"
      tools:text="Referral Status"/>
  </RelativeLayout>
</androidx.cardview.widget.CardView>

